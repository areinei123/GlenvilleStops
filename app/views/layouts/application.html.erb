<!DOCTYPE html>
<html>
<head>
  <title>Glenville Stops</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">GlenvilleStops</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
          <li><%= link_to 'Directions & Parking' %></li>
          <li><%= link_to 'Restaurant' %></li>
          <li><%= link_to 'News & Events' %></li>
          <li><%= link_to 'Menus' %></li>
          <li><%= link_to 'Reservations' %></li>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
